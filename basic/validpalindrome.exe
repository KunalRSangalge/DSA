class Solution {
private:

    bool valid(char ch)
    {
        
        if((ch>='a' && ch<='z' ) || (ch>='A' && ch<='Z') || (ch>='0' && ch<='9'))
        return true;
        else
        return false;        
    }
    char low(char ch)
    {
        if((ch>='a' && ch<='z') || (ch>='0' && ch<='9'))
        return ch;
        else 
        {ch=ch-'A'+'a'; return ch;}
    }
    bool checkpal(string t)
    {
        int s=0,e=t.length()-1;
        while(s<=e)
        {
            if(t[s]!=t[e])
            return 0;
            else
            {s++;e--;}
        }
        return 1;
    }
public:
    bool isPalindrome(string s) {
        string temp="";

        //removing non-alphanumeric char
        for(int i=0;i<s.length();i++)
        {
            if(valid(s[i]))
            temp.push_back(s[i]);
        }

        //all lowercase
        for(int i=0;i<temp.length();i++)
        {
            temp[i]= low(temp[i]);
        }

        //palindrome check
        return checkpal(temp);
    }
};